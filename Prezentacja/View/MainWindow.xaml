<Window x:Class="Prezentacja.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prezentacja"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Symulacja" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" Grid.Column="0"
    Width="700"
    Height="350"
    Fill="Green"
            Stroke="Black" StrokeThickness="3" Grid.ColumnSpan="4" Margin="10,42,50,42" />
        <Canvas x:Name="canvas" Grid.ColumnSpan="5">
            <Button x:Name="add" Click="add_bila">Dodaj bilę</Button>
        </Canvas>
    </Grid>
</Window>
